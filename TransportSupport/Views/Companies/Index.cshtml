@model IEnumerable<TransportSupport.Models.Company>

<style>

    .carousel-control-prev-icon {
        background-image: url('https://apufpel.com.br/assets/img/seta_prim.png')
    }

    .carousel-control-next-icon {
        background-image: url('https://apufpel.com.br/assets/img/seta_ult.png')
    }

</style>
<h1>Dane firmy</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#detailsCompany">Podgląd</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active show" data-toggle="tab" href="#listCompany">Lista Danych Firmy</a>
    </li>
</ul>
<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active show" id="listCompany">
        <table class="table backgroundInput">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Street)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NIP)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Street)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NIP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edytuj</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Usuń</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="tab-pane fade" id="detailsCompany">
        <div id="carouselExampleIndicators" class="carousel backgroundInput" data-ride="carousel">
            
            <div class="carousel-inner" >
                @foreach (var item in Model)
                {
                    if (item == Model.First())
                    {
                        <div class="carousel-item active">
                            <a class="d-block w-100">@await Html.PartialAsync("Details", item)</a>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item ">
                            <a class="d-block w-100">@await Html.PartialAsync("Details", item)</a>
                        </div>
                    }
                }

            </div>

            <a class="carousel-control-prev btn btn-primary" href="#carouselExampleIndicators" role="button" data-slide="prev" style="opacity: 100">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next btn btn-primary" href="#carouselExampleIndicators" role="button" data-slide="next" style="opacity: 100">
                <span class="carousel-control-next-icon" aria-hidden="false"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
