@model List<string>

@{
	ViewData["Title"] = "Usuwanie roli";
}

<h2>Usuwanie roli</h2>

<div class="row">
	<div class="col-md-4">
		<form asp-action="Remove">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label class="control-label">Rola</label>
				
				@Html.DropDownList("roleName", new SelectList(Model))
			</div>
			<div class="form-group">
				<input type="submit" value="Usuń!" class="btn btn-danger" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Anuluj</a>
</div>



