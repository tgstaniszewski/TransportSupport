@model IEnumerable<TransportSupport.Models.Invoice>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center">Faktury</h2>

<p>
    <a class="btn btn-success"asp-action="Create">Utwórz nową fakturę</a>
    @if (ViewBag.newInvoicesCount > 0)
    {
        <span class="badge badge-warning">@ViewBag.newInvoicesCount</span>
    }
</p>
@if (Model.Count() == 0)
{
    <p>Brak Faktur do wyświetlenia </p>
}
else
{
    <table class="table">
        <thead class="btn-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContractorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MethodOfPayment)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contractor.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MethodOfPayment)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a> 
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.ID">Details</a> 
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

}

