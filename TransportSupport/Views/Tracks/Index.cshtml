@model IEnumerable<TransportSupport.Models.Track>

<style>

    .carousel-control-prev-icon {
        background-image: url('https://apufpel.com.br/assets/img/seta_prim.png')
    }

    .carousel-control-next-icon {
        background-image: url('https://apufpel.com.br/assets/img/seta_ult.png')
    }

    .tabList {
        box-shadow: 10px 10px 5px grey;
        border: 1px solid #fff
    }
</style>

    <h1>Trasy</h1>

    <p>
        <a class="btn btn-success" asp-action="Create">Utwórz nową trasę</a>
    </p>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link tabList" data-toggle="tab" href="#detailsTracks">Podgląd</a>
        </li>
        <li class="nav-item tabList">
            <a class="nav-link active show" data-toggle="tab" href="#listTracks">Lista Tras</a>
        </li>
    </ul>
    <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active show" id="listTracks">
            <table class="table backgroundInput">
                <thead class=" btn-primary">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UrlGoogleMaps)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Time)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Distance)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnitOfMeasure)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ContractorID)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UrlGoogleMaps)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Time)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Distance)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnitOfMeasure)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contractor.Name)
                            </td>
                            <td>
                                <a class=" btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                                @*<a class=" btn btn-warning" asp-action="Details" asp-route-id="@item.ID">Details</a>*@
                                <a class=" btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="detailsTracks">
            <div id="carouselExampleIndicators" class="carousel " data-ride="carousel">

                <div class="carousel-inner">
                    @foreach (var item in Model)
                    {
                        if (item == Model.First())
                        {
                            <div class="carousel-item active">
                                <a class="d-block w-100">@await Html.PartialAsync("Details", item)</a>
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item ">
                                <a class="d-block w-100">@await Html.PartialAsync("Details", item)</a>
                            </div>
                        }
                    }

                </div>

                <a class="carousel-control-prev btn btn-primary" href="#carouselExampleIndicators" role="button" data-slide="prev" style="opacity: 100">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next btn btn-primary" href="#carouselExampleIndicators" role="button" data-slide="next" style="opacity: 100">
                    <span class="carousel-control-next-icon" aria-hidden="false"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>